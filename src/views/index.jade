doctype html
html
  head
    title SSMid
    include ./partials/head.jade
    script(type='text/javascript').
      function selectLocation() {
          var x = document.getElementById("location");
          var i = x.selectedIndex;
          document.getElementById("sloc").value = x.options[i].text;
      }
  body.overlay-opened.home-page
      .app-wrapper
        include ./partials/navbar.jade
        main.app-content
          .container
            form.app-quick-search.form-inline
              div.text-danger
                i.fa.fa-warning.fa-2x
              div.info-text
                strong Aktif oyun yok veya şampiyon seçimi yapılıyor.. Lütfen Tekrar Deneyiniz..
              .search
                input.form-control.input-lg.search-input(name="_sid" id="search" placeholder="canlı maç ara..")
                input(id="sloc" name="sloc" value="TR" type="hidden")
                .search-actions
                  select.search-location(id="location" onchange="selectLocation()")
                    option TR
                    option NA
                    option EUW
                    option EUNE
                    option LAN
                    option LAS
                    option BR
                    option RU
                    option OCE
                    option KR
                    option JP
                  button.btn.btn-default.search-submit(type="submit")
                    i.fa.fa-search
            .app-overlay
        footer.app-footer.trnsprn(style="bottom:0;")
          include ./partials/footer.jade
      include ./partials/scripts.jade