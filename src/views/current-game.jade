    script(type='text/javascript').
        setInterval(function myFunction() {
            var matchtime = 1471250275676;
            var d1 = new Date(matchtime);

            var d2 = new Date();
            var s = new Date(d2 - d1);
            var minutes = s.getMinutes();
            var seconds = s.getSeconds();
            

            if(minutes < 10)
            {
               minutes ='0'+ minutes;
            }
            if(seconds <10)
            {
               seconds ='0'+ seconds;
            }
            if (s.getHours() > 0) {
                    minutes = minutes + (s.getHours() * 60);
                }
            var elapsed=minutes+':'+seconds;

            document.getElementById("elapsed").innerHTML =elapsed;
        }, 1000);
